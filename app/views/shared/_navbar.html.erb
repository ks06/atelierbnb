<div class="navbar navbar-expand-xl navbar-light navbar-lewagon align-items-center">
  <%= link_to "/", class: "navbar-brand" do %>
    <h1 id="sitename">Atelierbnb</h1>
  <% end %>

  <div class="mr-auto medium-width" id="navbar-search">

    <form action="/spaces" method="get" class="form-inline d-flex justify-content-center md-form form-sm active-purple-2 mt-2">
      <input class="form-control form-control-sm mr-3 w-75 search-bar" style="border:0px; border-bottom: 1px solid #CCC9A1; border-radius: 0px;" type="text" placeholder="Search" name="search" aria-label="Search">
      <button type="submit" class="border-0"><i class="fas fa-search" aria-hidden="true"></i></button>
    </form>


  </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", spaces_path, class: "nav-link" %>
      </li>

      <li class="nav-item active">
        <%= link_to "Create new listing", new_space_path, class: "nav-link" %>
      </li>


      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "My bookings", user_bookings_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

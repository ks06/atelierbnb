
<div class="container mt-3 align-center w-50">
  <div class="row">
    <div class="col-12">
      <h2>Create a new space</h2>
      <br>
    </div>

    <div class="col-12">
      <div style="border-bottom: 1px solid darkgrey;">
        <%= simple_form_for @space do |f| %>
          <%= f.input :category, collection: ["Music recording studio", "Music rehearsal room", "Dance studio", "General rehearsal space", "Artist studio"] %>
          <%= f.input :title %>
          <%= f.input :location %>
          <%= f.input :capacity %>
          <%= f.input :description %>
          <%= f.input :photos, as: :file, input_html: { multiple: true, class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload photos' %>
          <%= f.submit :submit, class: "btn btn-lg btn-outline-success float-right mt-3" %>
        <% end %>
      </div>
    </div>


    <div class="col-12">
      <br>
      <%= link_to "Cancel", spaces_path, class: "btn btn-lg btn-outline-danger cancel-button"%>
      <br>
      <br>
    </div>
  </div>
</div>
